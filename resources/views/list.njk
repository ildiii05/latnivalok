{% extends "layout" %}

{% block content %}

<div class="row">
  {% for county in counties %}
  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">{{ county.name }} <a href="/county/{{county.id}}" class="btn btn-danger btn-xs pull-right">Összes megtekintése</a></div>
      <ul class="list-group">
        {% if county.sight.length == 0 %}
        <li class="list-group-item">
          <p>Nincs ebben a megyében lévő látnivaló!
        </li>
        <li class="list-group-item">
          <p>
        </li>
        {% else %}
        {% for sight in county.sight %}
        <li class="list-group-item">
          <a href="/sights/{{ sight.id }}">
            {{ sight.name }}
          </a>
          <span class="label label-info pull-right">
            {% for category in categories %}
            {% if category.id == sight.category_id %}
            {{ category.name }}
            {% endif %}
            {% endfor %}
          </span>
        </li>
        {% endfor %}
        {% endif %}
      </ul>
    </div>
  </div>
  {% endfor %}

</div>

{% endblock %}